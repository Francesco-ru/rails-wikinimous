<h1>Articles</h1>

<% @articles.each do |article| %>
  <h2><%= link_to article.title, article_path(article.id) %></h2>
  <%= link_to "Delete #{article.title}",
    article_path(article.id),
    method: :delete,
    data: { confirm: "Are you sure?" }
  %>
<% end %>
<div>
  <%= link_to 'Add article', new_article_path %>
</div>
