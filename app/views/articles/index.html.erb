<div class='container'>
<% @articles.each do |article| %>
  <div class='article'>
  <h2><%= link_to article.title, article_path(article.id) %></h2>
  <%= link_to "Delete #{article.title}",
    article_path(article.id),
    method: :delete,
    data: { confirm: "Are you sure?" }
  %>
</div>
<% end %>
</div>

